<h1>レビューお願いします。</h1><br>
<%= form_for(@review) do |f| %>
    <%=f.hidden_field :drink_id,value:@drink_id%>
    <p>五段階で</p>
    <div id="star"></div><br>

    <%= f.label :body,"コメント"%>
    <%= f.text_area :body,class:"input-group form-control"%><br>

    <%= f.submit '完了', class: "btn btn-send" %>
<%end%>