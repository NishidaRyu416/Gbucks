<div class="row">
  <%@drinks.each do|drink|%>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%if drink.image.present?%>
      <%=drink.image%>
       <%end%>
      <div class="caption">
        <h3><%=drink.name%></h3>
        <p><%=drink.explanation%></p>
        <p><%=drink.price%></p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>
  <%end%>
</div>
